{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "ES2015",
    "lib": ["es2015"],
    "sourceMap": true,

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,

    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "files": ["src/main.ts"]
}
