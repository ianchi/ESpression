{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"commonjs",
        "lib": ["es2015", "dom"],
        "sourceMap": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "strictNullChecks": false,

        "outDir": "dist",
        "typeRoots": [
          "node_modules/@types"
        ],
        "importHelpers": true,
        "noEmitHelpers": true
    },
     "files": [
       "src/main.ts",
       "src/rules/index.ts"
     ]
}
